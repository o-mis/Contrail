<div id="map"></div>

<script
  src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['GOOGLE_API'] %>&callback=initMap"
    async defer></script>

<script>
  function initMap() {
    var map = new google.maps.Map(document.getElementById('map'), {
        center: {lat: <%= @micropost.latitude %>, lng: <%= @micropost.longitude %>},
        zoom: 16
    });

    var contentString = '<%= image_tag @micropost.image.url, size: "200x200" %>';
    var infowindow = new google.maps.InfoWindow({
        content: contentString
    });

    var markerPosition = {lat: <%= @micropost.latitude %>, lng: <%= @micropost.longitude %>};
    var marker = new google.maps.Marker({
      map: map,
      position: markerPosition,
    });

    marker.addListener('click', function() {
      infowindow.open(map, marker);
    });
  };
</script>




