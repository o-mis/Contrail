<% if user_signed_in? %>
  <div class="d-none d-lg-block">
    <button type="button" class="fab-lg" data-toggle="modal" data-target="#micropostModal">
      <span><i class="fas fa-plus"></i></span>
    </button>
  </div>
  <div class="d-lg-none">
    <button type="button" class="fab-md" data-toggle="modal" data-target="#micropostModal">
      <span><i class="fas fa-plus"></i></span>
    </button>
  </div>
  <div class="modal fade" id="micropostModal" tabindex="-1" role="dialog" aria-labelledby="micropostModalLabel">
    <div class="modal-dialog modal-xl modal-dialog-scrollable h-75">
      <div class="modal-content">
        <div class="modal-header">
          <h6 class="modal-title" id="micropostModalLabel"></h6>
          <button type="button" class="close" data-dismiss="modal" aria-label="閉じる">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
            <%= render 'microposts/form', micropost: @micropost %>
        </div>
      </div>
    </div>
  </div>
<% end %>
