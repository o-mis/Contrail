<%= form_with(model: micropost, local: true) do |f| %>

  <%
=begin%>
 <div id="error_explanation">
    <ul>
      <% micropost.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div> 
<%
=end%>

  <div class="field">
    <%= f.radio_button(:arrived_at, :昼) %>
    <%= label_tag(:arrived_at, "昼", class: "fa fa-day pr-3") %>
    <%= f.radio_button(:arrived_at, :夜) %>
    <%= label_tag(:arrived_at, "夜", class: "fa fa-night") %>
  </div>

  <div class="field">
    <%= f.label :budget, "予算" %>
    <%= f.select :budget, [['〜¥999', 1], ['¥1,000〜¥1,999', 2], ['¥2,000〜¥2,999', 3], ['¥3,000〜¥3,999', 4], ['¥4,000〜¥4,999', 5],
                            ['¥5,000〜¥5,999', 6], ['¥6,000〜¥6,999', 7], ['¥7,000〜¥7,999', 8], ['¥8,000〜¥8,999', 9], ['¥9,000〜¥9,999', 10],
                            ['¥10,000〜¥19,999', 11], ['¥20,000〜¥29,999', 12], ['¥30,000〜', 13]], { prompt: "" }, { class: "form-control rounded" } %>
  </div>

    <div class="field mt-5">
    <%= f.label :restaurant, "店舗名" %>
    <%= f.text_field :restaurant, class: "form-control rounded", required: true %>
  </div>

  <div class="field my-5">
    <%= f.label :content, "投稿内容" %>
    <%= f.text_area :content, class: "form-control rounded form-content", placeholder: "このお店の評価を投稿しましょう(140字以内)", required: true %>
  </div>

  <div class="field mt-5">
    <%= f.label :image do %>
      <i class="far fa-image"></i>
    <% end %>
    <%= f.file_field :image, class: "form-image" %>
  </div>

  <div class="actions">
    <%= f.submit class: "btn rounded-pill btn-micropost" %>
  </div>

<% end %>
