  <% provide(:title, "フィード") %>

<div class="card-group">
    <div class="card">
      <% @microposts.each do |micropost| %>
          <% if micropost.image.url %>
            <%= image_tag micropost.image.to_s, class: "card-img-top" %>
          <% end %>
        <div class="card-body">
          <p class="card-text">
            <% if micropost.restaurant %>
              <small class="text-muted"><%= micropost.restaurant %></small>
            <% end %>
          </p>
          <p class="card-text">
            <%= micropost.content %>
          </p>
          <p class="card-text">
            <small class="text-muted">
              <%= link_to 'Show', micropost %>
              <%= link_to 'Destroy', micropost, method: :delete, data: { confirm: 'Are you sure?' } %>
              <%= link_to class: "fa-heart" do %>
                <i class="fas fa-heart heart-m"></i>
              <% end %>
            </small>
          </p>
        </div>
      <% end %>
    </div>
  </div>
<%= paginate @microposts %>



