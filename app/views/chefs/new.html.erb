<div class="container w-70">
  <div class="card mx-auto" style="width: 50rem; height: 30rem;">
    <div class="card-body overflow-auto">
      <%= form_with model: @chef do |f| %>
        <div class="field d-flex">
          <%= f.label :image do %>
          <% end %>
          <%= f.file_field :image, class: "form-image", id: "image" %>
          <div id="img_field" onClick="$('#image').click()">
            <% if @chef.image.url.present? %>
              <%= image_tag(@chef.image.url) %>
            <% else %>
              <i class="far fa-image ml-1"></i>
            <% end %>
          </div>
        </div>
        <div class="field mt-2">
          <%= f.label :address do %>
            店舗名 <span class="post-required">(必須)</span>
          <% end %>
          <%= f.text_field :address, class: "form-control rounded-0", required: true %>
        </div>
        <div class="field">
          <%= f.label :comment do %>
            コメント <span class="post-required">(必須)</span>
          <% end %>
          <%= f.text_area :comment, class: "form-control rounded-0 form-content", placeholder: "(150字以内)", required: true %>
        </div>
        <div class="field my-4">
          <%= f.label :tag_list do %>
            タグを追加
          <% end %>
          <%= f.text_field :tag_list, value: @chef.tag_list.join(','), class: "form-control rounded-0", placeholder: "(例: タグ1,タグ2)" %>
        </div>
        <div class="d-flex flex-row">
          <%= f.submit "投稿する", { class: "btn rounded-0 ml-auto mt-2 mr-1 btn-micropost" } %>
        </div>
      <% end %>
      <%= render 'microposts/image_review' %>
    </div>
  </div>
</div>
