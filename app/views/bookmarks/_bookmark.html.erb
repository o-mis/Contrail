<% if user_signed_in? %>
  <% if micropost.bookmarked?(current_user) %>
    <%= form_for(micropost.bookmarks.find_by(user_id: current_user.id), method: :delete, remote: true) do %>
      <%= button_tag type: 'submit', class: "clear-decoration" do %>
        <i class="fas fa-bookmark  fa-lg bookmarked-btn"></i>
      <% end %>
    <% end %>
  <% else %>
    <%= form_for(micropost.bookmarks.build, remote: true) do %>
      <%= hidden_field_tag :micropost_id, micropost.id %>
      <%= button_tag type: 'submit', class: "clear-decoration" do %>
        <i class="fas fa-bookmark fa-lg muted-bookmark"></i>
      <% end %>
    <% end %>
  <% end %>
<% end %>
