            <% else %>
              <span class="head-menu"><%= image_tag 'no_avatar.png', size: "30x30", class: "rounded-circle", alt: "avatar" %></span>
            <% end %>
            <i class="material-icons right black-text">arrow_drop_down</i>
          <% else %>
            <i class="material-icons right black-text">menu</i>
          <% end %>
        </a>
      </li>
    </ul>
  </div>
</nav>

