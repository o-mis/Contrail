<ul id="dropdown1" class="dropdown-content">
  <% if user_signed_in? %>
    <li>
      <%= link_to user_path(current_user), class: "black-text text-decoration-none" do %>
        <i class="material-icons">perm_identity</i>マイページ
      <% end %>
    </li>
    <li>
      <%= link_to bookmarks_path, class: "black-text text-decoration-none" do %>
        <i class="material-icons">bookmark_border</i>ブックマーク
      <% end %>
    </li>
    <li>
      <%= link_to search_users_path, class: "black-text text-decoration-none" do %>
        <i class="material-icons">people</i>ユーザー検索
      <% end %>
    </li>
    <li class="divider"></li>
