<nav class="navbar mb-4">
  <div class="container">
    <%=link_to "Contrail", root_path, class: "navbar-brand mr-auto" %>
    <% if user_signed_in? %>
      <%= link_to bookmarks_path, class: "bookmark" do %>
        <i class="fas fa-bookmark head-bookmark fa-lg"></i>
      <% end %>
    <% end %>
    <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="ナビゲーションの切替">
      <i class="fas fa-bars fa-lg"></i>
    </button>
        <div class="collapse navbar-collapse mt-3" id="navbarNavAltMarkup">
          <% if user_signed_in? %>
            <ul class="navbar-nav">
              <li class="signedin-item mr-auto mb-1 d-flex align-items-center">
                <% if current_user.avatar? %>
                  <%= link_to image_tag(current_user.avatar.mini.url, class: "rounded-circle", alt: "avatar image"), user_path(current_user) %>
                <% else %>
                  <%= link_to image_tag('no_avatar.png', size: "50x50", class: "rounded-circle mb-3", alt: "avatar image"), user_path(current_user) %>
                <% end %>

                <%= link_to user_path(current_user), class: "signedin-item" do %>
                  <div><div class="ml-2"><%= current_user.name %></div></div>
                <% end %>
              </li>
              <li class="signedin-item mb-3">
                <%= link_to search_users_path, class: "signedin-item text-decoration-none" do %>
                  <i class="fas fa-search mr-2 nav-items"></i> キーワードで検索
                <% end %>
              </li>
              <li class="signedin-item pb-3">
                <%= link_to users_path, class: "signedin-item text-decoration-none" do %>
                  <i class="fas fa-check mr-2 nav-items"></i> ユーザー
                <% end %>
              </li>
              <li class="signedin-item pb-2">
                <%= link_to destroy_user_session_path, method: :delete, class: "signedin-item text-decoration-none" do %>
                  <span><i class="fas fa-power-off mr-2 nav-items"></i> ログアウト</span>
                <% end %>
              </li>
          <% else %>
              <li class="not-signedin-item pt-4 mb-3">
                <%= link_to search_users_path, class: "not-signedin-item text-decoration-none" do %>
                  <i class="fas fa-search mr-2 nav-items"></i> キーワードで検索
                <% end %>
              </li>
              <li class="not-signedin-item mb-3">
                <%= link_to new_user_session_path, class: "not-signedin-item text-decoration-none" do %>
                  <i class="fas fa-sign-in-alt mr-2 nav-items"></i> ログイン
                <% end %>
              </li>
              <li class="not-signedin-item mb-5">
                <%= link_to users_guest_sign_in_path, method: :post, class: "not-signedin-item text-decoration-none" do %>
                  <i class="fas fa-sign-in-alt mr-2 nav-items"></i> 簡単ログイン
                <% end %>
              </li>
            </ul>
          <% end %>
        </div>
    </div>
</nav>
