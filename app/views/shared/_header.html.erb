    <ul class="right hide-on-med-and-down">
      <li>
        <%= link_to chefs_path, class: "font black-text text-decoration-none" do %>
          <i class="material-icons tooltipped" data-position="bottom" data-tooltip="お店のお知らせ">restaurant</i>
        <% end %>
      </li>
      <li>
        <%= link_to search_microposts_path, class: "font black-text text-decoration-none" do %>
          <i class="material-icons">search</i>
        <% end %>
      </li>
      <!-- Dropdown Trigger -->
      <li>
        <a class="dropdown-trigger" data-target="dropdown1">
          <% if user_signed_in? %>
            <% if current_user.avatar? %>
