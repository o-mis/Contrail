      <% end %>
    </li>
  <% else %>
    <li>
      <%= link_to "ゲストログイン", users_guest_sign_in_path, method: :post, class: "guest-login black-text text-decoration-none", onclick: "M.toast({html: 'こんにちはゲストさん'}, {displayLength: 10000})" %>
    </li>
    <li>
      <%= link_to "ログイン", sign_in_path, class: "user-login black-text text-decoration-none" %>
    </li>
  <% end %>
</ul>
<nav class="white z-depth-0">
  <div class="nav-wrapper">
    <%=link_to "Contrail", root_path, class: "brand-logo black-text text-decoration-none ml-2" %>
