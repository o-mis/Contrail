<div class="container">
  <%= search_form_for(@q, url: search_users_path)  do |f| %>
    <%= f.search_field :name_cont, class: "search-form form-control rounded-sm text-center mb-3", placeholder: "ユーザーを検索" %>
  <% end %>
</div>

<% if @users.any? %>
  <ul class="users-index">
    <% @users.each do |user| %>
      <li>
        <%= link_to user.name, user %>>
      </li>
    <% end %>
  </ul>
<% end %>