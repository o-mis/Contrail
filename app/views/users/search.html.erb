<div class="col-md-10 mx-auto mb-4">
  <form class="mb-1">
    <div class="form-row justify-content-center">
      <%= search_form_for(@q, url: search_users_path)  do |f| %>
        <div class="form-group col-md-8 pr-0">
        <%= f.search_field :name_cont, class: "search-form form-control rounded-0 pl-2", placeholder: "ユーザーを検索..." %>
        </div>
        <div class="form-group col-md-2 pl-0">
          <%= f.submit "検索", class: "btn btn-outline-dark  rounded-0" %>
        </div>
        <% end %>
  </form>
</div>

<div class="col-md-6 mx-auto">
  <% if @users.any? %>
    <%= render partial: 'users/index_users' , collection: @users, as: "user" %>
  <% end %>
</div>
<div class="col-md-10 mt-3 mx-auto"><%= paginate @users %></div>
