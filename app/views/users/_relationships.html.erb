<% @user ||= current_user %>
<div class="relationships">
  <%= link_to following_user_path(@user), class: "text-decoration-none mr-3" do %>
    <strong id="following_<%= @user.id %>" class="relationship">
      <%= @user.following.count.to_s(:delimited) %>
    </strong>
    <small class="text-muted">フォロー中</small>
  <% end %>
  <%= link_to followers_user_path(@user), class: "text-decoration-none ml-3" do %>
    <strong id="followers_<%= @user.id %>" class="relationship">
      <%= @user.followers.count.to_s(:delimited) %>
    </strong>
    <small class="text-muted">フォロワー</small>
  <% end %>
</div>
