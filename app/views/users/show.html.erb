<% provide(:title, @user.name) %>

<div class="row">
  <aside class="col-md-4">
    <section class="profile">
      <h8>
        <%= gravatar_for @user %>
        <%= @user.name %>
        <%= @user.email %>
        <%= link_to "編集", edit_user_path(@user) %>
      </h8>
    </section>
  </aside>
<div class="col-md-8">
  <% if @user.microposts.any? %>
    <h5>投稿</h5>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= paginate @microposts %>
  <% end %>
</div>

