<% provide(:title, @user.name) %>

<div class="container">
  <div class="row mx-auto text-center">
    <div class="profile d-flex justify-content-center col-12 mb-5">
      <h6>
        <% if current_user.avatar? %>
          <%= image_tag current_user.avatar.url, size: "130x130", class: "rounded-circle mb-3", alt: "avatar image" %>
        <% else %>
          <%= image_tag 'no_avatar.png', size: "130x130", class: "rounded-circle mb-3", alt: "avatar image" %>
        <% end %>
        <div class="text-center mt-2">
          <span class="mr-2"><%= @user.name %></span>
          <% if current_user.id == @user.id %>
            <%= link_to edit_user_registration_path(@user), class: "btn btn-edit btn-outline-secondary rounded-pill ml-2" do %>
              プロフィールを編集
            <% end %>
          <% end %>
          <%= render 'follow_btn' if user_signed_in? %>
        </div>
        <div class="mt-3">
          <%= render 'relationships' %>
        </div>
      </h6>
    </div>

    <!-- タブ部分 -->
    <ul class="nav nav-tabs no-gutters mx-auto mb-2" id="pills-tab" role="tablist">
      <li class="nav-item" role="presentation">
        <a href="#item1" id="posts-tab" class="nav-link user-tabs active" role="tab" data-toggle="tab" aria-controls="item1" aria-selected="true">
          投稿
        </a>
      </li>
      <li class="nav-item" role="presentation">
        <a href="#item2" id="likes-tab" class="nav-link user-tabs" role="tab" data-toggle="tab" aria-controls="item2" aria-selected="false">
          いいね
        </a>
      </li>
      <li class="nav-item" role="presentation">
        <a href="#item3" id="bookmarks-tab" class="nav-link user-tabs" role="tab" data-toggle="tab" aria-controls="item3" aria-selected="false">
          ブックマーク
        </a>
      </li>
    </ul>

    <!-- パネル部分 -->
    <div class="tab-content tab-post" id ="pills-tabContent">
      <div id="item1" class="tab-pane active" role="tabpanel" aria-labelledby="posts-tab">
        <% if @feed.any? %>
          ここに投稿を画像のみ表示する予定です
        <% else %>
          投稿がありません
        <% end %>
      </div>
      <div id="item2" class="tab-pane" role="tabpanel" aria-labelledby="likes-tab">
        <% if current_user.liked_posts.any? %>
          <div class="row">
            <% current_user.liked_posts.each do |micropost| %>
              <div class="col-md-6 col-lg-4">
                <div class="card mb-2">
                  <%= link_to image_tag(micropost.image.to_s, size: '400x400') %>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center font-weight-bold">
            まだいいねがありません
          </div>
          <div class="text-muted text-center">
            投稿をいいねするとここに表示されます
          </div>
        <% end %>
      </div>
      <div id="item3" class="tab-pane" role="tabpanel" aria-labelledby="bookmarks-tab">
        <%= render 'shared/bookmark_tab' %>
      </div>
    </div>
  </div>
</div>
