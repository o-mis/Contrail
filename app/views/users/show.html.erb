<% provide(:title, @user.name) %>

<div class="row text-center">
    <div class="profile col-12 mb-5">
      <h6>
        <%= gravatar_for @user %>
        <div class="text-center mt-2">
          <span><%= @user.name %></span>
          <% if current_user.id == @user.id %>
            <%= link_to edit_user_path(@user), class: "btn btn-edit btn-outline-secondary rounded-pill" do %>
              プロフィールを編集
            <% end %>
          <% end %>
          <%= render 'follow_btn' if user_signed_in? %>
        </div>
        <div class="mt-3">
          <%= render 'relationships' %>
        </div>
      </h6>
    </div>
    <div class="text-center">
      <% @user.liked_posts.each do |micropost| %>
        <%= micropost.user.name %>
        <%= micropost.content %>
      <% end %>
    </div>
    <%
=begin%>
 <div class="relationship">
      <% if following.any? %>
        <%= render @followings %>
      <% else %>
        <div class="text-center">
          まだフォローしていません
        </div>
      <% end %>
    </div>
    <div class="relationship">
      <% if @user.followers.any? %>
        <%= render 'show_follow', objects: @followers %>
      <% else %>
        <div class="text-center">
          まだフォロワーがいません
        </div>
      <% end %>
    </div> 
<%
=end%>


    <%= render 'show_follow' %>

    <div class="col-10">
      <% if @user.microposts.any? %>
        <h5>投稿</h5>
        <ol class="microposts">
          <%= render @microposts %>
        </ol>
      <% end %>
    </div>
  </div>
</div>
