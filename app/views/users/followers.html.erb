<% provide(:title, 'フォロワー') %>

<div class="container d-flex flex-row ml-5 mt-5">
  <div class="mt-1">
    <%= render 'users/link' %>
  </div>
  <div class="follow-info font-weight-bold ml-2">
    <%= @user.name %>
  </div>
</div>

<div class="col-md-5 mx-auto">
  <% if @user.followers.any? %>
    <h6 class="text-dark text-center font-weight-bold mt-3">フォロワー</h6>
    <div class="users-following d-flex flex-row">
      <%= render partial: 'users/followers_list', collection: @followers, as: 'user' %>
    </div>
  <% else %>
    <div class="no-post-info">
      <h5 class="text-center font-weight-bold mt-5">
        まだフォロワーがいません
      </h5>
      <div class="text-muted text-center">
        フォローされるとここに表示されます
      </div>
    </div>
  <% end %>
</div>
