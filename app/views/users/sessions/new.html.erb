<% provide(:title, 'ログインページ') %>

<h1 class="h5 mt-3 mb-3 font-weight-bold text-center">ログイン</h1>
    <div class="signin-page mx-auto col-md-5">
      <%= render  "devise/shared/error_messages" %>
      <div class="mt-5">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <div class="input-field mb-4">
            <%= f.label :email do %>
              メールアドレス
            <% end %>
            <%= f.email_field :email, autocomplete: "email", class: "w-100 pl-3" %>
          </div>

          <div class="input-field mb-2">
            <%= f.label :password do %>
              パスワード
            <% end %>
            <%= f.password_field :password, class: "w-100 pl-3" %>
          </div>

          <div class="remember-box mb-5">
            <% if devise_mapping.rememberable? %>
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
            <% end %>
          </div>

          <div>
            <%= f.submit "ログイン", class: "btn signin-btn w-100 mb-3" %>
          </div>

          <%= link_to "ゲストログイン", users_guest_sign_in_path, method: :post, class: "text-decoration-none btn w-100 mb-3" %>
        <% end %>

        <%# <%= link_to "メールが届きませんか?", new_confirmation_path(resource_name), class: "no-confirm text-decoration-none mb-5" %>

          <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
            <%= link_to "新規アカウントを作成", new_registration_path(resource_name), class: 'btn mx-auto w-100 mt-5' %>
          <% end %>
        </div>
      </div>
    </div>





