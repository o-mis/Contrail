<% provide(:title, 'ログインページ') %>

    <h1 class="h5 my-5 font-weight-bold text-center">ログイン</h1>
    <div class="signin-page">
      <div class="mt-5 align-items-center">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <div class="field mb-4">
            <%= f.email_field :email, placeholder: "メールアドレス", autocomplete: "email", required: true, class: "form-ls w-100 pl-3" %>
          </div>

          <div class="field mb-4">
            <%= f.password_field :password, placeholder: "パスワード", required: true, class: "form-ls w-100 pl-3" %>
          </div>

          <div class="field remember-box text-center">
            <% if devise_mapping.rememberable? %>
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
            <% end %>
          </div>

          <%= f.submit "ログイン", class: "btn signin-btn btn-outline-dark btn-block" %>

          <%= link_to "簡単ログイン", users_guest_sign_in_path, class: "signin-btn text-decoration-none btn btn-outline-primary btn-block", method: :post %>
        <% end %>

        <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %><br />

          <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
            <%= link_to "新規アカウントを作成", new_registration_path(resource_name), class: 'btn btn-dark btn-block' %><br />
          <% end %>
        </div>
      </div>
    </div>





