<% provide(:title, 'ログインページ') %>

  <h1 class="h4 mb-5 font-weight-bold text-center">メールアドレスでログイン</h1>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field text-center">
      <%= f.label :email %><br />
      <%= f.email_field :email, required: true, autofocus: true, autocomplete: "email" %>
    </div>
    <div class="field text-center">
      <%= f.label :password %><br />
      <%= f.password_field :password, required: true, autocomplete: "current-password" %>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="field text-center">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
    <div class="actions">
      <%= f.submit "ログイン", :class => "btn btn-outline-dark btn-block form-btn" %>
    </div>
    <div class="actions">
      <%= link_to "簡単ログイン", users_guest_sign_in_path, method: :post %>
    </div>
    <div class="actions text-center">
      <%= link_to "アカウントをお持ちでない方はこちら", new_user_registration_path ,class: "new-user text-secondary text-decoration-none" %>
    </div>
  <% end %>

  <div class="text-center">
    <%= render "users/shared/links", class: "text-center" %>
  </div>


