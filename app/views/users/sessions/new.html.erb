<% provide(:title, 'ログイン') %>

<h1 class="h5 mt-5 mb-5 font-weight-bold text-center">ログイン</h1>
  <div class="signin-page mx-auto col-md-5">
    <%= render "devise/shared/error_messages" %>
    <div class="mt-5">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="input-field mb-4">
          <%= f.label :email do %>
            メールアドレス
          <% end %>
          <%= f.email_field :email, class: "w-100 pl-3" %>
        </div>

        <div class="input-field">
          <%= f.label :password do %>
            パスワード
          <% end %>
          <%= f.password_field :password, class: "w-100 pl-3" %>
        </div>

        <div class="mt-5">
          <%= f.submit "ログイン", class: "btn signin-btn w-100 mb-3" %>
        </div>

        <%= link_to "ゲストログイン", users_guest_sign_in_path, method: :post, class: "text-decoration-none grey darken-1 btn w-100 mb-3" %>
      <% end %>

      <%# <%= link_to "メールが届きませんか?", new_confirmation_path(resource_name), class: "no-confirm text-decoration-none mb-5" %>

      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= link_to "新規アカウントを作成", new_registration_path(resource_name), class: 'btn grey darken-4 mx-auto w-100 mt-5' %>
      <% end %>
    </div>
  </div>





