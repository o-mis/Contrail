<% provide(:title, 'フォロー中') %>

<div class="d-flex flex-row ml-5 mt-5">
  <div class="mt-1 ml-5"><%= render 'users/link' %></div>
  <div class="post-name follow-info font-weight-bold ml-2"><%= @user.name %></div>
</div>

<div class="col-md-5 mx-auto">
  <% if @user.following.any? %>
    <h6 class="text-dark text-center font-weight-bold mt-3">フォロー中</h6>
      <%= render partial: 'users/following_list', collection: @following, as: "user" %>
  <% else %>
    <%= render 'users/following_status' %>
  <% end %>
</div>
