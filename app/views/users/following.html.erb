<% provide(:title, 'フォロー') %>

<div class="d-flex flex-row ml-3 mt-5">
  <div class="mt-1 ml-3"><%= render 'users/link' %></div>
  <div class="follow-info font-weight-bold ml-2"><%= @user.name %></div>
</div>

<div class="col-md-5 mx-auto">
  <% if @user.following.any? %>
    <h6 class="text-dark text-center font-weight-bold mt-3">フォロー中</h6>
      <%= render partial: 'users/following_list', collection: @following, as: "user" %>
  <% else %>
    <%= render 'users/following_status' %>
    <div class="mt-5 no-post-info">
      <h6 class="text-center font-weight-bold">
          まだフォローしているユーザーがいません
      </h6>
      <div class="text-muted text-center">
          フォローするとここに表示されます
      </div>
    </div>
  <% end %>
</div>
