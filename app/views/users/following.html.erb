<% provide(:title, 'フォロー中') %>

<%= link_to users_path, class: "text-decoration-none" do %>
  <i class="fas fa-arrow-left fa-lg"></i>
<% end %>
<% if user_signed_in? %>
  <span class="follow-info font-weight-bold ml-4"><%= @user.name %></span>
<% end %>

<div class="mt-3">
  <% if @users.any? %>
    <h6 class="text-secondary text-center font-weight-bold">フォロー中</h6>
    <ul class="users-following">
      <%= @users.each do |user| %>
        <li>
        <%= link_to user.name, user %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <h6 class="text-center font-weight-bold">まだフォローしているユーザーがいません</h6>
    <div class="text-muted text-center">フォローするとここに表示されます</div>
  <% end %>
</div>